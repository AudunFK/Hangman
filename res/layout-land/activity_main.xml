<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:background="@drawable/landscape_mainback"
    >
  	
  	<Spinner
  	    android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/languages"
      	android:gravity="center" 
      	android:paddingTop="25sp" 
      	android:visibility="gone"
  	    />

  	<Button
  	    android:id="@+id/helpBtn"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_above="@+id/langBtn"
  	    android:layout_centerHorizontal="true"
  	    android:minHeight="30dp"
  	    android:minWidth="80dp"
  	    android:text="@string/ruleTxt"
  	    android:textSize="12sp" />

  	<Button
  	    android:id="@+id/playBtn"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_above="@+id/exitBtn"
  	    android:layout_centerHorizontal="true"
  	    android:minHeight="30dp"
  	    android:minWidth="50dp"
  	    android:text="@string/playTxt"
  	    android:textSize="12sp" />

  	<Button
  	    android:id="@+id/langBtn"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_alignParentBottom="true"
  	    android:layout_alignRight="@+id/playBtn"
  	    android:layout_marginBottom="50dp"
  	    android:minHeight="30dp"
  	    android:minWidth="80dp"
  	    android:text="@string/language"
  	    android:textSize="12sp" />

  	<Button
  	    android:id="@+id/exitBtn"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_above="@+id/helpBtn"
  	    android:layout_alignRight="@+id/playBtn"
  	    android:minHeight="30dp"
  	    android:minWidth="80dp"
  	    android:text="@string/abortTxt"
  	    android:textSize="12sp" />
  	
</RelativeLayout>