<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/land_background6"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/gallows"
        android:paddingLeft="10dp"
        android:paddingTop="50dp" />

    <ImageView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/head"
        android:paddingLeft="67dp"
        android:paddingTop="35dp"
        android:src="@drawable/android_head" />

    <ImageView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/body"
        android:paddingLeft="64dp"
        android:paddingTop="46dp"
        android:src="@drawable/android_body" />

    <ImageView
        android:id="@+id/arm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/arm"
        android:paddingLeft="43dp"
        android:paddingTop="55dp"
        android:src="@drawable/land_android_leftarm" />

    <ImageView
        android:id="@+id/leg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/leg"
        android:paddingLeft="81dp"
        android:paddingTop="102dp"
        android:src="@drawable/land_android_leftleg" />

    <ImageView
        android:id="@+id/leg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/leg"
        android:paddingLeft="110dp"
        android:paddingTop="89dp"
        android:src="@drawable/land_android_rightleg" />

    <ImageView
        android:id="@+id/arm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/arm"
        android:paddingLeft="105dp"
        android:paddingTop="32dp"
        android:src="@drawable/land_android_rightarm" />

    <GridView
        android:id="@+id/letters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/body"
        android:gravity="left"
        android:horizontalSpacing="5dp"
        android:numColumns="15"
        android:padding="4dp"
        android:paddingBottom="0dp"
        android:stackFromBottom="true"
        android:stretchMode="columnWidth" >
    </GridView>

    <TextView
        android:id="@+id/txtExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/letters"
        android:layout_marginLeft="39dp"
        android:layout_toRightOf="@+id/leg2"
        android:paddingLeft="0dp"
        android:paddingTop="10dp"
        android:text="@string/Wintext"
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/word"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/arm2"
        android:layout_toRightOf="@+id/txtExample"
        
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >
    </LinearLayout>

</RelativeLayout>